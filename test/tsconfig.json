{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "strict": false,
    "types": ["jest", "node"]
  },
  "include": [
    "**/*.spec.ts",
    "**/*.e2e-spec.ts",
    "**/*.test.ts",
    "utils/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": ["node_modules", "coverage", "dist"]
}
